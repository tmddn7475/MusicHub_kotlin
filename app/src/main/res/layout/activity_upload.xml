<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UploadActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:gravity="left"
            android:text="업로드"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/upload_back_btn"
            android:padding="3dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/upload_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:adjustViewBounds="true"
                android:background="@drawable/edit_text_layout"
                app:srcCompat="@drawable/ic_baseline_photo_24" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="노래 제목"
                android:layout_marginLeft="36dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="32dp">

                <EditText
                    android:id="@+id/upload_song_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="48dp"
                    android:inputType="text"
                    android:maxLength="100"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text_layout"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/selectSongButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/foler_open"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="장르"
                android:layout_marginLeft="36dp" />

            <EditText
                android:id="@+id/upload_song_category"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="32dp"
                android:textColor="@color/white"
                android:background="@drawable/edit_text_layout"
                android:clickable="false"
                android:focusable="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="18dp"
                android:text="설명"
                android:textColor="@color/white"
                android:layout_marginLeft="36dp" />

            <EditText
                android:id="@+id/upload_song_description"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edit_text_layout"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:maxLength="2000"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:paddingEnd="10dp"
                android:paddingBottom="6dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/upload_length"
                android:textColor="@color/gray3"
                android:layout_gravity="right"
                android:text="0 / 2000"
                android:textSize="14dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/upload_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="@color/blue_dark"
                android:textColor="@color/white"
                android:text="업로드"
                android:textSize="20dp"
                app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.MediumComponent" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>