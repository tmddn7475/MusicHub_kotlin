<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activity.SongEditActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:gravity="left"
            android:text="곡 정보 수정"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/song_edit_back_btn"
            android:padding="3dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/edit_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:textSize="22dp"
            android:layout_marginEnd="3dp"
            android:textColor="@color/blue_dark"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="노래 제목"
                android:layout_marginLeft="20dp" />

            <EditText
                android:id="@+id/song_edit_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:inputType="text"
                android:maxLength="40"
                android:textColor="@color/white"
                android:background="@drawable/edit_text_layout"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="18dp"
                android:text="장르"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp" />

            <EditText
                android:id="@+id/song_edit_category"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edit_text_layout"
                android:textColor="@color/white"
                android:clickable="false"
                android:focusable="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="18dp"
                android:text="설명"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp" />

            <EditText
                android:id="@+id/song_edit_description"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edit_text_layout"
                android:textColor="@color/white"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:maxLength="2000"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingEnd="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/song_edit_length"
                android:textColor="@color/gray3"
                android:layout_gravity="right"
                android:text="0 / 2000"
                android:textSize="14dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/song_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="곡 삭제"
                app:drawableLeftCompat="@drawable/baseline_delete_24"
                android:textColor="@color/blue_dark"
                android:drawablePadding="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>